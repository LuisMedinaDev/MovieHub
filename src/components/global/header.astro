<header class="bg-colorPrimario fixed w-full z-[9999999999999999]">
    <nav>
        <div class="flex flex-row gap-10 items-center justify-between w-[85%] m-auto py-6">
            <div class="flex items-center justify-center gap-10">
                <img src="logo.webp" alt="logo" class="h-10 cursor-pointer">
                <ul class="flex items-center justify-center gap-10 text-[#95969b] text-[1.2rem]">
                <li><a href="#" class="linkHeader">Inicio</a></li>
