<script>
    const linkHeader = document.querySelectorAll('.linkHeader');

    linkHeader.forEach(link => {
        link.addEventListener('mouseover', ()=> {
            link.style.color = '#f2f2f2';
        })
        link.addEventListener('mouseout', ()=> {            
            link.style.color = '#95969b';
        })
    });
</script>