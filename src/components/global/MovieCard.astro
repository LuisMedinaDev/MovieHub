---
// MovieCard.astro
const { pelicula } = Astro.props;
---

<div  class="relative">
    <img src="estrella.webp" alt="star" class="h-7 cursor-pointer absolute top-3 right-3 opacity-70 hover:opacity-100 hover:scale-110  duration-200" id="estrellaFavorito">
    <img src={`https://image.tmdb.org/t/p/w500${pelicula.poster_path}`} class="w-[18rem] h-[20rem] rounded-t-[.6rem] object-cover" alt={pelicula.title}>
    <div class="bg-[#8b93ce20] flex flex-col py-3 px-3 rounded-b-[.6rem] text-[#95969b]">
        <h2 class="font-bold text-[1.1rem]">{pelicula.title}</h2>
        <span class="font-normal text-[1rem]">{pelicula.release_date}</span>
        <div class="h-[3rem] w-[3rem] rounded-full border-4 flex items-center justify-center absolute right-5  border-[#95969b]">
            <span class="font-bold">{parseInt(pelicula.vote_average)}%</span>
        </div>
    </div>
</div>